{
  "name": "@tinfoilsh/verifier",
  "version": "0.1.0",
  "description": "AMD SEV-SNP attestation verifier for Node.js and browsers",
  "type": "module",
  "main": "dist/esm/index.js",
  "browser": "dist/browser/verifier.min.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "browser": "./dist/browser/verifier.min.js",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:browser": "vitest run --config vite.config.playwright.ts",
    "test:integration": "vitest run --config vite.config.integration.ts",
    "test:browser:integration": "vitest run --config vite.config.integration.ts"
  },
  "keywords": [
    "attestation",
    "amd",
    "sev-snp",
    "verifier"
  ],
  "author": "Tinfoil",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.49.1",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@freedomofpress/crypto-browser": "^0.1.4",
    "@freedomofpress/sigstore-browser": "^0.1.9",
    "@freedomofpress/tuf-browser": "^0.1.5"
  },
  "engines": {
    "node": ">=20"
  }
}
